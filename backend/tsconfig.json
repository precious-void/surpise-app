{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "src",
    "outDir": "./dist",
    "typeRoots" : ["./node_modules/@types", "./src/@types"],
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
      "node_modules",
      "tests/**/*.ts"
  ]
}