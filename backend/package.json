{
  "name": "api",
  "version": "1.0.0",
  "description": "API",
  "main": "src/server.ts",
  "private": true,
  "scripts": {
    "start": "ts-node src/server.ts",
    "watch": "nodemon",
    "build": "tsc",
    "test": "nodemon --watch . --ext ts --exec \"mocha -r ts-node/register tests/**/*.test.ts\""
  },
  "dependencies": {
    "@types/cors": "^2.8.7",
    "@types/mongoose": "^5.7.36",
    "@types/node": "^14.14.6",
    "axios": "^0.21.0",
    "axios-extensions": "^3.1.3",
    "common": "0.1.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "mongoose": "^5.10.8",
    "nodemon": "^2.0.6",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5"
  },
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.8",
    "@types/mocha": "^8.0.3",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "chai": "^4.2.0",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-prettier": "^3.1.4",
    "mocha": "^8.2.1",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.2"
  },
  "prettier": {
    "semi": true,
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 120,
    "tabWidth": 4
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 11,
      "sourceType": "module"
    },
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "@typescript-eslint/no-angle-bracket-type-assertion": "off",
      "prettier/prettier": [
        "error",
        {
          "endOfLine": "auto"
        }
      ]
    }
  }
}